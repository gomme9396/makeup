<%= render :partial => "/home/navbar" %>

<div class = "container">
  <div class = "card" style="margin:10px">
    <div class = "container">
      <div class = "card-content">
        <span class = "card-title" style="font-weight:700">화장선생 가입하기</span><br />

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>


          <div class="field">
            <%= f.label :이름 %><br />
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: false %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 자 이상 입력하세요.)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "가입하기", class: "btn" %><%= render "devise/shared/links" %>
          </div>
        <% end %>


      </div>
    </div>
  </div>

</div>
